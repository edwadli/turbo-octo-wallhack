<h1> Event Creator</h1>

<%= form_for :event, url: events_path do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
    
    <p>

    </p>

    <p>

    </p>

    <p>
        <%= f.label :urgency %><br>
        <%= f.range_field :urgency, :min => 1, :max => 4 %>
