<body>
    <h1> Event Creator</h1>

    <%= form_for :event, url: events_path do |f| %>

        <% if @event.errors.any? %>
            <div id='error_explanation'>
                <h2><%= pluralize(@event.errors.count, 'error') %>
                prohibited this article from being saved:</h2>
            <ul>
                <% @event.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        <% end %>

        <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
        </p>

        <p>
            <%= f.label :typemeet, "Type of Meet" %></th>
            <%= f.select :typemeet,
                $TYPELIST.each_with_index.map{|name, i| [name, i]},
                selected: $TYPELIST.size-1 %>
        </p>


        <p>
            <%= f.label :datemeet, "Time of Meet" %></th>
        </p>


        <p>
            <%= f.label :urgency %><br>
            <%= f.range_field :urgency, :min => 1, :max => 4, value: 4 %><br>
            <%= f.label :urgency, "Later...........Immediate!!!" %><br>
        </p>
     
        <p>
            <%= f.label :location %><br>
            <%= f.text_field :location %>
        </p>

        <p>
            <%= f.label :description %><br>
            <%= f.text_area :description %>
        </p>
       
        <p>
            <%= f.submit %>
        </p>
    <% end %>

<%= link_to 'Back', events_path %>
</body>
